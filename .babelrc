{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {
        // See config/browser.rb
        "browsers": [
          "> 1%",
          "Chrome >= 50",
          "IE >= 11",
          "Edge >= 14",
          "Firefox >= 50",
          "Opera >= 40",
          "Safari >= 8",
          "iOS >= 8"
        ],
        "uglify": true
      },
      "useBuiltIns": true
    }]
  ],

  "plugins": [
    "syntax-dynamic-import",
    "transform-object-rest-spread",
    ["transform-class-properties", { "spec": true }]
  ]
}
