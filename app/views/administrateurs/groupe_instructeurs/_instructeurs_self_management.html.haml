  %p.notice= t('.self_managment_notice_html')

  = form_for procedure,
    method: :patch,
    url: update_instructeurs_self_management_enabled_admin_procedure_groupe_instructeurs_path(procedure),
    html: { class: 'form procedure-form__column--form no-background' } do |f|
    %label.toggle-switch
