- headers = private ? procedure.private_header_sections : procedure.header_sections

#summary{ class: headers.present? ? 'fr-col-12 fr-col-md-3' : '' }
  - if headers.present?
    %nav.fr-sidemenu.sticky.fr-hidden.fr-unhidden-md{ "aria-labelledby": "fr-summary-title", role: "navigation" }
      %ul.fr-sidemenu__list
        - headers.each do |header|
          %li.fr-sidemenu__item
            - level = header.type_de_champ.header_section_level_value.to_i
            - anchor_id = use_dom_id ? dom_id(header, :type_de_champ_editor) : "champ-#{header.stable_id}"
            - if level == 1
              %a.fr-sidemenu__link{ href: "##{anchor_id}" }= header.libelle
            - else
              %a.fr-sidemenu__link{ class: level >= 3 ? 'custom-link-grey' : '', href: "##{anchor_id}" }= "-- #{header.libelle}"
