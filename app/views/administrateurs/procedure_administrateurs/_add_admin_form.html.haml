= form_for procedure.administrateurs.new(user: User.new),
  url: { controller: 'procedure_administrateurs' },
  html: { id: "new_administrateur" },
  data: { turbo: true, turbo_force: :server } do |f|
  = render Dsfr::InputComponent.new(form: f, attribute: :email, input_type: :email_field, opts: {disabled: disabled_as_super_admin, autofocus: true}) do |c|
    - c.with_label {  "Ajouter un administrateur" }
    - c.with_hint { "Renseignez l’email d’un administrateur déjà enregistré sur #{Current.application_name} pour lui permettre de modifier « #{procedure.libelle} ». Exemple : marie.dupont@exemple.fr" }
  = f.submit 'Ajouter comme administrateur', class: 'fr-btn', disabled: disabled_as_super_admin
