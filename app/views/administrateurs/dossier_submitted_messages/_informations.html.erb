<div class="fr-input-group" data-controller="tiptap">
  <%= f.label :tiptap_body, class: "fr-label" do %>
    Message affiché après l'envoi du dossier
  <% end %>

  <div class="flex flex-gap-1 fr-mb-2w">
    <button type="button" title="Gras" class="fr-btn fr-btn--secondary fr-btn--sm fr-icon-bold" data-action="click->tiptap#menuButton" data-tiptap-target="button" data-tiptap-action="bold">
      Gras
    </button>
    <button type="button" title="Italique" class="fr-btn fr-btn--secondary fr-btn--sm fr-icon-italic" data-action="click->tiptap#menuButton" data-tiptap-target="button" data-tiptap-action="italic">
      Italique
    </button>
    <button type="button" title="Lien" class="fr-btn fr-btn--secondary fr-btn--sm fr-icon-link" data-action="click->tiptap#menuButton" data-tiptap-target="button" data-tiptap-action="link">
      Lien
    </button>
  </div>

  <div id="editor" class="tiptap-editor" data-tiptap-target="editor"></div>
  <%= f.hidden_field :tiptap_body, data: { tiptap_target: 'input' }, value: @dossier_submitted_message.tiptap_body_or_default %>
</div>
