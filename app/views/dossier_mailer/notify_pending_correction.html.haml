- content_for :procedure_logo do
  = render 'layouts/mailers/logo', url: @logo_url

%p= t(:hello, scope: [:views, :shared, :greetings])

%p= t('.explanation_html', dossier_id: @dossier.id, libelle_demarche: @dossier.procedure.libelle)
