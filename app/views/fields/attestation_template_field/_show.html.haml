- if field.data
  %strong Activée
  %p
    = field.data.activated

  %strong Logo
  %p
  - if field.data.logo.attached?
    = image_tag field.data.logo_url
  - else
    Aucun

  %strong Titre
  %pre{ style: "white-space: pre-wrap;" }
    = field.data.title

  %strong Corps
  %pre{ style: "white-space: pre-wrap;" }
    = field.data.body

  %strong Signature
  %p
    - if field.data.signature.attached?
      = image_tag field.data.signature
    - else
      Aucun

  %strong Pied de page
  %pre{ style: "white-space: pre-wrap;" }
    = field.data.footer

- else
  Aucun modèle d’attestation
