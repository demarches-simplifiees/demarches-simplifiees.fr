  locals: { steps: [[@procedure.libelle.truncate_words(10), instructeur_procedure_path(@procedure)],
                    ['Groupes dâ€™instructeurs']] }

.container.groupe-instructeur
  .card
    .card-title Gestion des Groupes
    %table.table.mt-2
      %thead
        %tr
          %th{ colspan: 2 } Liste des groupes
      %tbody
