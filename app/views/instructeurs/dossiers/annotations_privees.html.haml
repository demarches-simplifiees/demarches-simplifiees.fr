- content_for(:title, "Annotations privées · Dossier n° #{@dossier.id} (#{@dossier.owner_name})")

= render partial: "header", locals: { dossier: @dossier, gallery_attachments: @gallery_attachments, procedure_presentation: @procedure_presentation, notifications: @notifications, notifications_sticker: @notifications_sticker }

#dossier-annotations-privees
  .fr-container
    .fr-grid-row.fr-grid-row--center
      - summary = DossierTree::SectionsSummaryComponent.new(tree: @dossier.private_tree(profile: 'instructeur'))
      = render summary
      %div{ class: class_names("fr-col-12", "fr-col-xl-9" => summary.render?, "fr-col-xl-8" => !summary.render?) }
        = render partial: "shared/dossiers/edit_annotations", locals: { dossier: @dossier, seen_at: @annotations_privees_seen_at }
