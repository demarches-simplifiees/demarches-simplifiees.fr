<%= render Dsfr::NoticeComponent.new(closable: true, data_attributes: { "data-notice-name" => "enquete-satisfaction-2025" }) do |c| %>
  <% c.with_title do %>
    Enquête de satisfaction annuelle !
  <% end %>
  <% c.with_desc do %>
    Prenez quelques minutes pour répondre : l’enquête est anonyme et chaque réponse nous aide à avancer.
  <% end %>
  <% c.with_link do %>
    <%= link_to "Répondre à l’enquête", "https://framaforms.org/enquete-de-satisfaction-2025-pour-les-administrateurs-instructeurs-et-experts-de-demarche-numerique", class: "fr-notice__link", **external_link_attributes %>
  <% end %>
<% end %>

<% content_for(:title, "Démarches") %>

<div class="sub-header" data-controller="lazy-modal">
  <div class="fr-container">
    <div class="flex fr-mb-2v">
      <h1 class="fr-h3 fr-mb-0">Démarches</h1>

      <%# Use .size to reuse the procedures array loaded for the view %>
      <%= render Instructeurs::ProceduresDossiersSyntheseButtonComponent.new(procedures_count: @all_procedures.size) %>
    </div>

    <%= render SelectProcedureDropDownListComponent.new(procedures: @all_procedures, action_path: url_for([:select_procedure, :instructeur, :procedures]), form_class: 'width-66 fr-mb-3w') %>

    <nav
      class="fr-tabs"
      role="navigation"
      aria-label="<%= t('views.instructeurs.procedures_menu') %>"
    >
      <ul class="fr-tabs__list">
        <%= tab_item(t('pluralize.en_cours', count: @procedures_en_cours_count), instructeur_procedures_path(statut: 'en-cours'), active: @statut == 'en-cours', badge: number_with_html_delimiter(@procedures_en_cours_count)) %>
        <%= tab_item(t('pluralize.en_test', count: @procedures_draft_count), instructeur_procedures_path(statut: 'brouillons'), active: @statut == 'brouillons', badge: number_with_html_delimiter(@procedures_draft_count)) %>
        <%= tab_item(t('pluralize.closed', count: @procedures_closes_count), instructeur_procedures_path(statut: 'archivees'), active: @statut == 'archivees', badge: number_with_html_delimiter(@procedures_closes_count)) %>

        <li class="relative">
          <%# Render only button, not dialog here: because of position it would break z-index" %>
          <%= render Instructeurs::TabsExplanationsComponent.new(element: :button) %>
        </li>
      </ul>
    </nav>
  </div>
</div>

<div class="fr-container">
  <% if @procedures.present? %>
    <%= render Instructeurs::WarningBannerComponent.new(draft: @statut == "brouillons", single_procedure: false) %>
    <div class="flex justify-between fr-mb-3w">
      <h2 class="fr-h6 fr-m-0"><%= page_entries_info @procedures %></h2>

      <% if @statut == "en-cours" && @procedures_en_cours_count > 1 %>
        <%= link_to "Personnaliser l'ordre", order_positions_instructeur_procedures_path, class: 'fr-btn fr-btn--sm fr-btn--tertiary fr-btn--icon-left fr-icon-settings-5-line' %>
      <% end %>
    </div>
    <ul
      class="procedure-list fr-pl-0"
      data-controller="stream-loader"
      data-stream-loader-url-value="<%= counters_instructeur_procedures_path(statut: params[:statut], page: params[:page]) %>"
    >
      <%= render Instructeurs::ProcedureSummaryComponent.with_collection(@procedures) %>
    </ul>
    <%= paginate @procedures, views_prefix: 'shared' %>
  <% end %>
</div>

<%= render Instructeurs::TabsExplanationsComponent.new(element: :dialog) %>
