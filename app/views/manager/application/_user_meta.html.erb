<dl>
  <dt class="attribute-label">
    Emails
  </dt>
  <dd class="attribute-data attribute-data--meta-usager">
    <%= link_to('Voir les derniers emails', emails_manager_user_path(user)) %>
  </dd>
</dl>

<dl>
  <dt class="attribute-label">
    Usager
