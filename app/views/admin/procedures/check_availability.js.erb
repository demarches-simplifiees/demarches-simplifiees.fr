<% if @available %>
  <%= remove_element('.unavailable-path-message', inner: true) %>
  <%= enable_element('button[type=submit]') %>
<% else %>
  <%= render_to_element('.unavailable-path-message', partial: 'unavailable', locals: { mine: @mine }) %>
  <% if @mine %>
    <%= enable_element('button[type=submit]') %>
  <% else %>
    <%= disable_element('button[type=submit]') %>
  <% end %>
<% end %>
