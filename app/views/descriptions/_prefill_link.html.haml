= turbo_frame_tag "#{dom_id(description)}_url" do
  = render Dsfr::CalloutComponent.new(title: t("views.descriptions.edit.prefill_link_title"), theme: :success, icon: "fr-icon-paint-fill") do |c|
    - c.with_body do
      = t("views.descriptions.edit.prefill_link_info")
      %div
        %strong
          = description
    - c.with_bottom do
      = render Dsfr::CopyButtonComponent.new(title: t("views.descriptions.edit.prefill_link_copy"), text: description)
