= form_for service, html: { class: 'form' } do |f|

  = f.label :nom do
    Nom
    %span.mandatory *
  = f.text_field :nom, placeholder: 'service jeunesse et prévention, direction des affaires maritimes', required: true

  = f.label :organisme do
    Organisme
    %span.mandatory *
  = f.text_field :organisme, placeholder: "mairie de Mours, préfecture de l'Oise, ministère de la Culture", required: true

  -# = f.label :siret do
    Numéro TAHITI
    %span.mandatory *
  -# %p
    Pour trouver votre numéro TAHITI, utilisez
    %a{ href: 'http://www.ispf.pf/bases/repertoires/Entreprises/Recherche.aspx', target: '_blank', rel: 'noopener' }
      www.ispf.pf
    ou renseignez-vous auprès de votre service comptable
  -# = f.text_field :siret, required: true

  = f.label :type_organisme do
    Type d’organisme
    %span.mandatory *

  = f.select :type_organisme, Service.type_organismes.keys.map { |key| [ I18n.t("type_organisme.#{key}"), key] }

  %h2.header-section Informations de contact

  %p.explication Ces informations seront visibles par les utilisateurs du formulaire.

  = f.label :email do
    Adresse email
    %span.mandatory *
  = f.email_field :email, placeholder: 'secretariat@mon-service.gov.pf', required: true

  = f.label :telephone do
    Numéro de téléphone
    %span.mandatory *
  = f.telephone_field :telephone, placeholder: '40 54 43 54', required: true

  = f.label :horaires do
    Horaires
    %span.mandatory *
  = f.text_area :horaires, placeholder: "Du lundi au jeudi de 7h30 à 15h30. Le vendredi de 7h30 à 14h30.", required: true

  = f.label :adresse do
    Adresse
    %span.mandatory *
  = f.text_area :adresse, placeholder: "Immeuble Toriki 1er et 2ème étage, rue Dumont d’Urville, Papeete", required: true

  - if procedure_id.present?
    = hidden_field_tag :procedure_id, procedure_id

  .send-wrapper
    = f.submit "Valider", class: 'button send'
