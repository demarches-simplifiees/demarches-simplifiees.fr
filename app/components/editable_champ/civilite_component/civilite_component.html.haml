
.fr-fieldset__element.fr-fieldset__element--inline
  .fr-radio-group
    = @form.radio_button :value, Individual::GENDER_FEMALE, id: @champ.female_input_id, translate: "no", aria: labelledby_id_attr(input_label_id(@champ, :female))
    %label.fr-label{ for: @champ.female_input_id, id: input_label_id(@champ, :yes) }
      = Individual.human_attribute_name('gender.female')
.fr-fieldset__element.fr-fieldset__element--inline
  .fr-radio-group
    = @form.radio_button :value, Individual::GENDER_MALE, id: @champ.male_input_id, translate: "no", aria: labelledby_id_attr(input_label_id(@champ, :male))
    %label.fr-label{ for: @champ.male_input_id, id: input_label_id(@champ, :male) }
      = Individual.human_attribute_name('gender.male')
