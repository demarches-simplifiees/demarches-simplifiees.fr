.fr-card
  .fr-card__body
    .fr-card__content
      - if title
        %h1.fr-card__title
          = title
      - if desc
        %p.fr-card__desc
          = desc

    - if footer_buttons.any?
      .fr-card__footer
        .fr-btns-group.fr-btns-group--inline-reverse.fr-btns-group--inline-lg
          %ul
            %li
              = render Dsfr::ButtonComponent.with_collection(footer_buttons)
