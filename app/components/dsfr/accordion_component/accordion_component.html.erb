<%= content_tag(accordion_tag, class: "fr-accordion") do %>
  <%= content_tag(title_tag, class: "fr-accordion__title") do %>
    <button type="button"
            class="fr-accordion__btn"
            aria-expanded="<%= expanded.to_s %>"
            aria-controls="<%= id %>">
      <%= title %>
    </button>
  <% end %>
  <div id="<%= id %>" class="fr-collapse">
    <% if content? %>
      <%= content %>
    <% end %>
  </div>
<% end %>
