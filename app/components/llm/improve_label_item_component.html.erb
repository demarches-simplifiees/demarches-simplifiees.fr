<div class="fr-fieldset__element">
  <div class="fr-checkbox-group fr-my-1v">
    <%= checkbox do %>
      <span style="width: 100%;  display: block;">
        <span class="fr-badge fr-mr-1w"> Libell√© </span>

        <%= original_tdc.libelle %>

        <% if libelle_changed? %>
          <span class="fr-icon-arrow-right-line fr-icon--sm fr-mx-1w" aria-hidden="true"></span>
          <%= payload['libelle'] %>
        <% end %>
      </span>

      <% if description_changed? %>
        <br>
        <span class="fr-mt-1w" style="width: 100%;  display: block;">
          <span class="fr-badge fr-mr-1w"> Description </span>

          <% if original_tdc.description.lines.many? %>
            <%= simple_format(original_tdc.description) %>
          <% elsif original_tdc.description.present? %>
          <%= original_tdc.description %>
          <% end %>

          <% if description_changed? %>
            <% if payload['description'].lines.one? %>
              <span class="fr-icon-arrow-right-line fr-icon--sm" aria-hidden="true"></span>
              <%= payload['description'] %>
            <% else %>
              <span class="fr-icon-arrow-down-line fr-icon--sm" aria-hidden="true"></span>
              <%= simple_format(payload['description'], class: "fr-mt-1w") %>
            <% end %>
          <% end %>

          <% if item.justification.present? %>
            <span class="fr-hint-text"><%= item.justification %></span>
          <% end %>
        </span>
      <% end %>
    <% end %>
  </div>
</div>
