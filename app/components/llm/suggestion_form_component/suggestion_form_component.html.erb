  <p class="fr-mt-1w">
    <% if last_rule? %>
      <%= link_to("Revenir √† l‚Äô√©cran de gestion", back_link, class: "fr-link") %>
    <% else %>
      <%= link_to("Poursuivre le parcours d‚Äôam√©lioration", next_link, class: "fr-link") %>
    <% end %>
  </p>
<% end %>
