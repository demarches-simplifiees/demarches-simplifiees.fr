<div id="<%= id %>">
  <div class="fr-grid-row">
    <div class="fr-col-7 fr-pr-2w">
      <div class="flex column flex-gap-2">
        <% filters_selects.each do |filter_select| %>
          <div class="fr-card fr-p-2w">
            <%= form_with url: refresh_filters_instructeur_procedure_presentation_path(@procedure_presentation), data: { turbo: true, controller: "enable-submit-if-form-changes", action: "change->enable-submit-if-form-changes#onFormChange" }, id: "form-#{filter_select[:label].parameterize}" do |form| %>
              <%= filters_in_hidden_inputs(form, filter_select[:label].parameterize) %>
              <div class="flex align-end flex-gap-2">
                <div class="flex flex-1 column">
                  <%= form.label "filters_columns[]", filter_select[:label], class: "fr-label", for: "select-#{filter_select[:label].parameterize}" %>
                  <%= form.select "filters_columns[]", filter_select[:items], { prompt: t('.select'), required: true, disabled: disabled_items, selected: "" }, class: 'fr-select width-100', id:  "select-#{filter_select[:label].parameterize}" %>
                </div>
                <%= form.submit t('.add'), class: "fr-btn", disabled: true, data: { 'enable-submit-if-form-changes-target': 'submitButton' } %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div
      class="
        fr-col-5 fr-background-alt--blue-france rounded-4 fr-p-2w flex
        column flex-gap-3 justify-between
      "
    >
      <div id="selected-filters">
        <h5><%= t('.selection_title') %></h5>

        <div class="flex column flex-gap-2">
          <% filters_columns.each do |filter_column| %>
            <div class="filter-box" id="<%= filter_column.id.parameterize %>">
              <div class="flex flex-gap-1 align-center">
                <div class="flex">
                  <%= move_up_button(filter_column) %>
                  <%= move_down_button(filter_column) %>
                </div>
                <p class="fr-mb-0"><%= filter_column.label %></p>
              </div>
              <%= delete_button(filter_column) %>
            </div>
          <% end %>
        </div>
      </div>

      <%= form_with url: persist_filters_instructeur_procedure_presentation_path(@procedure_presentation), id: "toggle-apply-all-tabs-form", data: { turbo: true, turbo_force: :server } do |form| %>
        <%= render Dsfr::ToggleComponent.new(form: form, target: :apply_to_all_tabs, title: "Appliquer cette personnalisation dans tous les onglets (Ã  suivre, suivis par moi...)", extra_class_names: "fr-toggle--label-left fr-mt-2w") %>
      <% end %>
    </div>
  </div>

  <%= form_with url: persist_filters_instructeur_procedure_presentation_path(@procedure_presentation), id: "save-filters-form", data: { turbo: true, turbo_force: :server }  do |form| %>
    <%= filters_in_hidden_inputs(form, "save-filters-form") %>
  <% end %>
</div>
